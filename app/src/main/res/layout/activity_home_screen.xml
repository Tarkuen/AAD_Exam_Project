<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreenActivity"
    android:id="@+id/d_layout"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/n_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/design_default_color_primary"
            android:elevation="4dp"
            android:minHeight="56dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
            tools:targetApi="lollipop" />

        <FrameLayout
            android:id="@+id/n_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/n_view"
        app:headerLayout="@layout/n_header"
        app:menu="@menu/d_menu">

    </android.support.design.widget.NavigationView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/transfer"
            android:layout_width="129dp"
            android:layout_height="46dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="129dp"
            android:background="@color/good"
            android:text="@string/transfer"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/payment"
            android:layout_width="129dp"
            android:layout_height="46dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="56dp"
            android:background="@color/good"
            android:text="@string/pay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transfer" />

        <Button
            android:id="@+id/requestaccount"
            android:layout_width="192dp"
            android:layout_height="46dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="84dp"
            android:background="@color/design_default_color_primary"
            android:text="@string/account"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment" />
    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.DrawerLayout>